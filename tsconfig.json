{
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "baseUrl": ".",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom"], //lib可用es6读取
      "sourceMap": true,
      "jsx": "react", //jsx文件可以识别
      "moduleResolution": "node",
      "rootDir": ".",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      // "suppressImplicitAnyIndexErrors": true,
      // https://github.com/Microsoft/TypeScript/issues/28762#issuecomment-443406607
      // "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noUnusedLocals": true
    },
    "include": [
      "lib/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "*.js"
    ]
  }